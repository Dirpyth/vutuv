<h1><%= gettext "Social media accounts" %></h1>

<%= if @social_media_accounts == [] do %>
<h3><%= @user.full_name %> <%= gettext "has no social media accounts yet" %></h3>
<% else %>
<table>
  <thead>
    <tr>
      <th><%= gettext "Provider" %></th>
      <th><%= gettext "Value" %></th>

      <th></th>
    </tr>
  </thead>
  <tbody>
<%= for social_media_account <- @social_media_accounts do %>
    <tr>
      <td><%= social_media_account.provider %></td>
      <td><%= social_media_account.value %></td>

      <td>
        <%= link gettext("More details"), to: Routes.user_social_media_account_path(@conn, :show, @user, social_media_account) %>
      </td>
    </tr>
<% end %>
  </tbody>
</table>
<% end %>

<%= if assigns[:current_user] && @current_user.id == @user.id do %>
<span><%= link gettext("New social media account"), to: Routes.user_social_media_account_path(@conn, :new, @current_user) %></span>
<% end %>
